{
  "extends": [
    "config:base"
  ],
  "baseBranches": ["master"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 3
    },
    {
      "matchPackagePatterns": ["^eslint"],
      "groupName": "eslint packages"
    },
    {
      "matchPackagePatterns": ["^stylelint", "^postcss"],
      "groupName": "stylelint packages"
    }
  ],
  "automerge": true,
  "automergeType": "branch",
  "prHourlyLimit": 5,
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "timezone": "America/Chicago",
  "schedule": "before 5am"
}
